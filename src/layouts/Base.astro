---
import '../styles/global.css'

interface Props {
  title?: string
}

const { title = 'Ken Beer' } = Astro.props
const pageTitle = title === 'Ken Beer' ? title : `${title} | Ken Beer`
---

<!doctype html>
<html lang="en" class="antialiased">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{pageTitle}</title>
  </head>
  <body class="bg-stone-50 text-stone-900 min-h-screen">
    <div class="max-w-2xl mx-auto px-6 py-12">
      <header class="mb-12">
        <a href="/" class="text-stone-400 hover:text-stone-600 text-sm tracking-wide uppercase">
          Ken Beer
        </a>
      </header>
      <main>
        <slot />
      </main>
    </div>
  </body>
</html>
