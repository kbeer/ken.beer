---
interface Props {
  size?: 'sm' | 'md' | 'lg';
}

const { size = 'md' } = Astro.props;

const sizes = {
  sm: { text: '1.25rem', dot: '0.5rem', gap: '0.125rem' },
  md: { text: '1.5rem', dot: '0.625rem', gap: '0.15rem' },
  lg: { text: '2.5rem', dot: '1rem', gap: '0.25rem' },
};

const s = sizes[size];
---

<span class="logo" style={`--text-size: ${s.text}; --dot-size: ${s.dot}; --gap: ${s.gap};`}>
  <span class="text">KEN</span><span class="dot"></span><span class="text">BEER</span>
</span>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@500;700&display=swap');

  .logo {
    font-family: 'Space Grotesk', system-ui, sans-serif;
    font-weight: 700;
    font-size: var(--text-size);
    letter-spacing: 0.05em;
    display: inline-flex;
    align-items: center;
    gap: var(--gap);
    color: var(--sl-color-white);
  }

  :root[data-theme='light'] .logo {
    color: var(--sl-color-black);
  }

  .text {
    font-variant: small-caps;
    text-transform: lowercase;
  }

  .dot {
    width: var(--dot-size);
    height: var(--dot-size);
    background: var(--sl-color-accent);
    border-radius: 50%;
    display: inline-block;
    transform: translateY(-15%);
  }
</style>
