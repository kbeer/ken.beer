---
interface Props {
  size?: 'sm' | 'md' | 'lg';
}

const { size = 'md' } = Astro.props;

const sizes = {
  sm: { text: '1.25rem', dot: '0.35rem', gap: '0.2rem' },
  md: { text: '1.5rem', dot: '0.4rem', gap: '0.25rem' },
  lg: { text: '2.5rem', dot: '0.6rem', gap: '0.35rem' },
};

const s = sizes[size];
---

<span class="logo" style={`--text-size: ${s.text}; --dot-size: ${s.dot}; --gap: ${s.gap};`}>
  <span class="text">KEN</span><span class="dot"></span><span class="text">BEER</span>
</span>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Big+Shoulders+Display:wght@700&display=swap');

  .logo {
    font-family: 'Big Shoulders Display', system-ui, sans-serif;
    font-weight: 700;
    font-size: var(--text-size);
    letter-spacing: 0.08em;
    display: inline-flex;
    align-items: center;
    gap: var(--gap);
    color: var(--sl-color-text);
  }

  .text {
    text-transform: uppercase;
  }

  .dot {
    width: var(--dot-size);
    height: var(--dot-size);
    background: var(--sl-color-accent);
    border-radius: 50%;
    display: inline-block;
  }
</style>
